<!DOCTYPE html>
<html lang="en" ng-app="cartApp">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Electronics, Cars, Fashion, Collectibles, Coupons and More | eBay</title>
    <!-- Latest compiled and minified CSS-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Optional theme-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/product.css' />
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"/>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script>
    <script src="angularjs/shopping_cart.js"></script>
</head>

<body ng-controller="cartController">
<div class="row">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <img
                        src="https://upload.wikimedia.org/wikipedia/commons/1/1b/EBay_logo.svg"
                        alt="LinkedIn" class="logo" height="50" width="64">


            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">

                    <li><a href="#">      </a></li>
                    <li><a>hello!!! </a></li>
                    <li><a href="/homepage"> Back</a></li>
                    <li><a></a></li>

                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/getProduct">View Products</a></li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/view_Profile">View Profile</a></li>
                            <li><a href="/profile">Edit Profile</a></li>
                            <li><a href="/logout">logout</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Separated link</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <div class="row">
        <nav>
            <div class="col-md-2 col-md-4">
                <div class="navbar-default sidebar" role="navigation">
                    <div class="sidebar-nav navbar-collapse">
                        <ul class="nav" id="side-menu">

                            <li>
                                <a href="/product"><i class="fa fa-dashboard fa-fw"></i>Post New Advertisement</a>
                            </li>


                            <li>
                                <a href="/test1"><i class="fa fa-edit fa-fw"></i>User Activity</a>
                            </li>
                            <li>
                                <a href="/bbid_log"><i class="fa fa-edit fa-fw"></i>Bid Logs</a>
                            </li>
                            <li>
                                <a href="/sell_history"><i class="fa fa-edit fa-fw"></i>Advertisement History</a>
                            </li>

                            <li>
                                <a href="/buy_history"><i class="fa fa-edit fa-fw"></i>Order History</a>
                            </li>
                            <li>
                                <a href="/showcart"><i class="fa fa-edit fa-fw"></i>View Cart</a>
                            </li>

                            <li>
                                <a href="/view_profile"><i class="fa fa-edit fa-fw"></i>view Profile</a>
                            </li>
                            <li><a href="/profile"><i class="fa fa-edit fa-fw"></i>Edit Profile</a></li>
                            <li>
                                <a href="/logout"><i class="fa fa-edit fa-fw"></i>Logout</a>

                            </li>
                        </ul>
                    </div></div></div></nav>
        <!-- /.navbar-static-side -->
        <div class="col-md-offset-2">


            <div class="container-fluid">
                <div class="row">

                    <div class="col-md-4 thumbnail" ng-repeat="test in test" style="padding: 1em 1em">
                        <!--<div ng-repeat="test in e.shopping_cart">-->
                        <div class="caption">
                            <h2>{{test.item_name}}</h2>
                            <h4>Seller: {{test.seller_name}}</h4>
                            <p class="description"><ul>
                                <li>{{test.item_description}}</li>
                            </ul></p>
                            <input type="text" name="item_id" style="display: none" value={{test.item_id}} readonly/>
                            <div class="clearfix">
                                <div class="row">
                                    <div class="prices pull-left">Item Price: {{test.item_price}}</div></div>
                                <div class="row">
                                    <div class="prices pull-left">Quantity Selected: {{test.item_quantity}}</div></div>

                                <button type="submit" ng-click="removeProduct(test._id);" class="btn btn-danger">Remove from Cart</button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container-fluid">
                <h3>Total Cart Value: $ {{cartTotal}} </h3>
                <form action="/checkout" method="post">
                    <button type="submit" class="btn btn-success" style="width: 150px;">Checkout</button>
                </form>
            </div>
        </div>
    </div>
</div>
</body>
</html>